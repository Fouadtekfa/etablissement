{% extends 'global.html.twig' %}

{% block title %}
    Etablissement
{% endblock %}

{% block body %}

    {% block content %}
        <div class="example-wrapper">
            <button type="button" class="btn btn-primary retour"><a href=" {{ url("etablissements") }}" style="color : white">Retour</a></button>
            <button type="button" class="btn btn-primary ajout"><a href=" {{ url("commentaireCreate", { id_et : id_etablissement })     }}" style="color : white">Ajouter</a></button>
            <h1>Etablissement {{ id_etablissement }}! âœ…</h1>

            <table class="table col-6">
            <thead class="thead-dark">
                <tr>
                    <th>Auteur</th>
                    <th>Date</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
            <tbody>
                {% for comm in commentaire %}
                <tr>
                    <td>{{ comm.auteur }}</td>
                    <td>{{ comm.date_commentaire }}</td>
                    <td>{{ comm.commentaire }}</td>
                    <td>{{ comm.note }}</td>
                    <td>
                        <button type="button" class="btn btn-primary modifier"><a href=" {{ url("commentaireUpdate", { id_et : id_etablissement, id : comm.id }) }}">Modifier</a></button>
                        <button type="button" class="btn btn-primary supprimer"><a href=" {{ url("commentaireSupprimer", { id_et : id_etablissement, id : comm.id }) }}" style="color : white">Supprimer</a></button>
                    </td>
                </tr>
                {% endfor %}
            </tbody>   
        </table>
        </div>
    {% endblock %}
{% endblock %}
