{% extends 'global.html.twig' %}

{% block title %}
    Page des etablissements
{% endblock %}

{% block body %}
    {% block content %}

    <div class="example-wrapper" style="align-text: center">
        <h1>Etablissements  ! âœ…</h1>
        <table class="table col-6" style="margin: 0 auto">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Appellation Officielle</th>
                    <th>Denomination Principale</th>
                    <th>Secteur</th>
                    <th>Latitude</th>
                    <th>longitude</th>
                    <th>adresse</th>
                    <th>departement</th>
                    <th>commune</th>
                    <th>region</th>
                    <th>academie</th>
                    <th>date_ouverture</th>
                </tr>
            <tbody>
                {% for etablissement in etablissements %}
                <tr>
                    <td>{{ etablissement.id }}</td>
                    <td><a href="{{ url('etablissement' , { id : etablissement.id}) }}">{{ etablissement.appellation_officielle }}</a></td>
                    <td>{{ etablissement.denomination_principale }}</td>
                    <td>{{ etablissement.secteur }}</td>
                    <td>{{ etablissement.latitude }}</td>
                    <td>{{ etablissement.longitude }}</td>
                    <td>{{ etablissement.adresse }}</td>
                    <td>{{ etablissement.departement }}</td>
                    <td>{{ etablissement.commune }}</td>
                    <td>{{ etablissement.region }}</td>
                    <td>{{ etablissement.academie }}</td>
                    <td>{{ etablissement.date_ouverture }}</td>
                </tr>

                {% endfor %}
            </tbody>   
        </table>
    </div>
    {% endblock %}

{% endblock %}